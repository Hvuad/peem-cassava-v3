{
	"name": "react-hono-template",
	"scripts": {
		"client": "cd client && bun run dev",
		"server": "PORT=3001 bun run --hot server/index.ts",
		"dev": "concurrently \"bun run server\" \"bun run client\"",
		"build": "bun build ./server/index.ts --outdir ./dist --target bun && cd client && bun run build",
		"build:ui": "cd client && bun run build",
		"start": "bun run dist/index.js",
		"format": "biome check --write --unsafe"
	},
	"dependencies": {
		"hono": "^4.11.7"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@eslint/js": "^9.39.2",
		"@types/bun": "latest",
		"@types/node": "^24.10.10",
		"@types/react": "^19.2.10",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.3",
		"babel-plugin-react-compiler": "^1.0.0",
		"concurrently": "^9.2.1",
		"eslint": "^9.39.2",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.26",
		"globals": "^16.5.0",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1"
	}
}
